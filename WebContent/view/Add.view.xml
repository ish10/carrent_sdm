<mvc:View
	controllerName="pizza.controller.Add"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.m.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar"
	xmlns:f="sap.ui.layout.form"
	>
	
	<semantic:DetailPage
		id="page"
		navButtonPress="onNavBack"
		showNavButton="{device>/system/phone}"
		title="Create new Pizza Order"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">

		<semantic:content>
			
			<f:SimpleForm id="SimpleFormChange354"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Best In pizza - New Order"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="Customer Name" />
				<Input id="name" value="{addView>/order/CustomerName}" />
				<Label text="Order No" />
				<Input value="{addView>/order/OrderNo}">
				</Input>
				<Label text="Date" />
				<DatePicker value="{addView>/order/OrderDate}"></DatePicker>
				<Label text="Country" />
			</f:content>
		</f:SimpleForm>
			
		<Table id="idProducts"
				inset="false"
				items="{
					path: 'addView>/order/NavOrderItems'
				}">
				<headerToolbar>
			<Toolbar>
				<content>
					<Title text="Products" level="H2"/>
					<ToolbarSpacer />
					<Button icon="sap-icon://add" press="addNewPizza"></Button>
				</content>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="Item No" />
			</Column>
			<Column
				width="12em">
				<Text text="Product" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Qty" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="Unit" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{addView>ItemNo}"></Text>
					<ComboBox
				 	 items="{/ProductsSet}"
					 value="{addView>ProductId}">
					 <items>
					 	<core:Item
					 		text="{Name}" key="{ProductId}"
					 	></core:Item>
					 </items></ComboBox>
					<Input type="Number" value="{addView>Qty}"></Input>
					<Text text="{addView>Uom}"></Text>
				</cells>
			</ColumnListItem>
		</items>
	</Table>	
		</semantic:content>
	<semantic:addAction>
						<semantic:AddAction icon="sap-icon://save" press="onSave"/>
					</semantic:addAction>

	</semantic:DetailPage>

</mvc:View>